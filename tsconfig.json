{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "outDir": "./dist",
    "noImplicitAny": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "test/**.ts"
  ]
}
